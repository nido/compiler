# Makefile for libelf library

# What we're building, and where to find it.
LIBRARY = libelf.a
TARGETS = $(LIBRARY)
SRC_DIRS    = $(BUILD_BASE)/lib

# where to find the proper config.h ...
LIBELF_CONFIG_INC = $(BUILD_AREA)/include/libelf

# Makefile setup
include $(COMMONDEFS)

VPATH    =  $(SRC_DIRS)

# Compiler options
LCOPTS = $(STD_COMPILE_OPTS)
LCDEFS = $(HOSTDEFS) $(TARGDEFS)

# Since we must pick-up the config.h from a "host-dependant"
# directory, we must prevent cpp from searching in the directory where
# the c-file lives in the case of #include "config.h" ...
LCINCS = -I- -I$(LIBELF_CONFIG_INC)

LCINCS += -I$(SRC_DIRS) -I$(BUILD_BASE)

HOSTDEFS += -DHAVE_CONFIG_H

CFILES = \
	begin.c \
	cntl.c \
	end.c \
	errmsg.c \
	errno.c \
	fill.c \
	flag.c \
	getarhdr.c \
	getarsym.c \
	getbase.c \
	getdata.c \
	getident.c \
	getscn.c \
	hash.c \
	kind.c \
	ndxscn.c \
	newdata.c \
	newscn.c \
	next.c \
	nextscn.c \
	rand.c \
	rawdata.c \
	rawfile.c \
	strptr.c \
	update.c \
	version.c \
	checksum.c \
	32.fsize.c \
	32.getehdr.c \
	32.getphdr.c \
	32.getshdr.c \
	32.newehdr.c \
	32.newphdr.c \
	32.xlatetof.c \
	cook.c \
	data.c \
	input.c \
	assert.c \
	nlist.c \
	opt.delscn.c \
	x.remscn.c \
	x.movscn.c \
	64.xlatetof.c \
	gelfehdr.c \
	gelfphdr.c \
	gelfshdr.c \
	gelftrans.c \
	swap64.c \
	verdef_32_tof.c \
	verdef_32_tom.c \
	verdef_64_tof.c \
	verdef_64_tom.c

HOSTDEFS += -DLONGLONG

default: first
	$(MAKE) local last

install: last

first:
ifndef PARALLEL
	cd $(BUILD_AREA)/include && $(MAKE) install
endif

local: $(TARGETS)

make_libdeps: local

last: make_libdeps

.PRECIOUS: $(LIBRARY)
$(LIBRARY): $(OBJECTS)
	$(AR) $(ARFLAGS) $@ $^

include $(COMMONRULES)
