 SIZEDEFS += -D_LP64
endif

ifeq ($(BUILD_ARCH), MIPS)
  SIZEDEFS += -D_MIPS_SZINT=32
  ifeq ($(BUILD_ABI), I64BIT)
    SIZEDEFS += -D_MIPS_SZPTR=64 -D_MIPS_SZLONG=64
  else
    ifeq ($(BUILD_ABI), 64BIT)
      SIZEDEFS += -D_MIPS_SZPTR=64 -D_MIPS_SZLONG=64
    else
      SIZEDEFS += -D_MIPS_SZPTR=32 -D_MIPS_SZLONG=32
    endif
  endif
endif

